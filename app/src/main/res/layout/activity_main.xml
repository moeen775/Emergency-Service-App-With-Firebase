<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stringNuber"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/emergencycll"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custome_button"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/emergencycll"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custome_button"
        android:gravity="center"
        android:text="SOS"
        android:textSize="100dp"
        android:textStyle="bold"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencycll"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/findlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Location: "
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="show Location"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/emergencycll"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            >
            <ImageView
                android:id="@+id/idinformation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/info"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5px"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            >
            <ImageView
                android:id="@+id/idNews"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/icon"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5px"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Ershad,This a Final Demo Project" />

</RelativeLayout>