<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    tools:context=".common_information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:justificationMode="inter_word"
        android:padding="10dp"
        android:text="আমরা আন্তরিকভাবে দুঃখিত। আমরা কোনো নির্দিষ্ট নম্বর দিতে পারিনি। অনুগ্রহ করে 999 নম্বরে কল করুন অথবা কলে ক্লিক করুন, তারা আপনাকে সাহায্য করবে।"
        android:textAlignment="center"
        android:textSize="25dp"

        />
    <ImageButton
        android:id="@+id/idcallemergency"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/two_color_curved"
        android:src="@drawable/ic_baseline_call_24"
        android:layout_gravity="center"

        />


</LinearLayout>