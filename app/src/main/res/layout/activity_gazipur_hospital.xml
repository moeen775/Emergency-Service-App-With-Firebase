                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:text=" G-87, HAJIPARA, JOYDEVPUR GAZIPUR, 1700" />
