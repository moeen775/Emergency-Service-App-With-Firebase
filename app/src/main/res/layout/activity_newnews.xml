<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newnews">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/idaddnumber"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:text="প্রথম আলো"
                android:background="@drawable/two_color_curved"
                android:layout_marginBottom="25dp"

                />

            <TextView
                android:layout_marginBottom="25dp"
                android:id="@+id/idjugantor"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:text="যুগান্তর"
                android:background="@drawable/two_color_curved"

                />
            <TextView
                android:layout_marginBottom="25dp"
                android:id="@+id/idkalerkonto"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:text="কালের কণ্ঠ"
                android:background="@drawable/two_color_curved"

                />
            <TextView
                android:layout_marginBottom="25dp"
                android:id="@+id/idthedailystar"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="50dp"
                android:layout_marginTop="20dp"
                android:text="The Daily Star"
                android:background="@drawable/two_color_curved"

                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>