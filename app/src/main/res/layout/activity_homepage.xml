<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/shadow_color_bottom"
    tools:context=".homepage">
    <TextView
        android:id="@+id/idaddnumber"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="ADD Number"
        android:background="@drawable/shape_two_cervvd"

        />
    <TextView
        android:id="@+id/iddelete"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Delete Number"
        android:background="@drawable/shape_two_cervvd"

        />
    <TextView
        android:id="@+id/idnumber"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Number"
        android:background="@drawable/shape_two_cervvd"

        />
    <TextView
        android:id="@+id/idnumbershow"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="+88"
        android:background="@drawable/shape_two_cervvd"

        />
    <TextView
        android:id="@+id/newspaper"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Read News Paper"
        android:background="@drawable/shape_two_cervvd"

        />
    <LinearLayout
        android:id="@+id/layout1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        >
        <EditText
            android:id="@+id/identernumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Emergency Number"

            />
        <TextView
            android:id="@+id/idfirstnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="ADD"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="@drawable/shape_two_cervvd"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Emergency Number"

            />
        <TextView
            android:id="@+id/idlastNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="ADD"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="@drawable/shape_two_cervvd"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="10px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Enter Emergency Number"

            />
        <TextView
            android:id="@+id/number3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="ADD"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:padding="10dp"

            android:background="@drawable/shape_two_cervvd"
            />


    </LinearLayout>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_two_cervvd"
        android:text="Go to home" />


</LinearLayout>